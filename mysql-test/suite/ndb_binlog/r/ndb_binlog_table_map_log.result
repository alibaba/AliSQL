######################################################################
# Bug#37953883  table map entry is logged in binlog for create table
# statements when sql_log_bin is disabled for the session.
######################################################################
[connection server2]
SET sql_log_bin=0;
SET @save_debug= @@GLOBAL.debug;
SET @@GLOBAL.debug="+d,ndb_binlog_verify_table_maps";
CREATE TABLE test_blob_log_table_maps (id INT PRIMARY KEY, b BLOB, lb LONGBLOB, lt LONGTEXT) ENGINE = NDB;
INSERT INTO test_blob_log_table_maps VALUES (1, repeat("!", 512), repeat("@", 512), repeat("#", 512)),
(2, repeat("!", 512), repeat("$", 512), repeat("&", 512)),
(3, repeat("!", 512), repeat("%", 512), repeat("^", 512)),
(4, repeat("!", 512), repeat("*", 512), repeat("~", 512));
# Should not abort
SELECT id FROM test_blob_log_table_maps ORDER by id;
id
1
2
3
4
UPDATE test_blob_log_table_maps
SET lb = repeat("+", 256), lt = repeat("-", 128)
WHERE id BETWEEN 1 and 4;
SELECT COUNT(lb), COUNT(lt) FROM test_blob_log_table_maps;
COUNT(lb)	COUNT(lt)
4	4
DELETE FROM test_blob_log_table_maps;
SELECT COUNT(*) FROM test_blob_log_table_maps;
COUNT(*)
0
# Cleanup
SET @@GLOBAL.debug = @save_debug;
SET sql_log_bin=1;
DROP TABLE test_blob_log_table_maps;

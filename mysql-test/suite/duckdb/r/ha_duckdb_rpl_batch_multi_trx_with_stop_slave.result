# 1. Test restart SQL Thread after the Trx2 is partially executed
###########################################################################
[connection slave]
STOP REPLICA;
[connection master]
# 1.1 Execute two Transactions on Master
INSERT INTO t1 (id, c0, c1) VALUES (1, 'abc', NULL), (3, 'RDS', 'duck');
BEGIN;
UPDATE t1 SET id=6, c1='AliSQL' WHERE id=1;
DELETE FROM t1 WHERE id=3;
COMMIT;
# 1.2 Make SQL Thread stop after the Trx2's Update Event executed
[connection slave]
SET GLOBAL debug="+d,debug_sync_before_apply_update_rows_event";
START REPLICA;
[connection slave1]
SET debug_sync="now WAIT_FOR apply_signal";
STOP REPLICA;
[connection slave]
SET debug_sync="now SIGNAL resume_signal";
include/wait_for_slave_sql_to_stop.inc
# 1.3 Restart SQL Thread
[connection slave1]
SET GLOBAL debug="-d,debug_sync_before_apply_update_rows_event";
START REPLICA;

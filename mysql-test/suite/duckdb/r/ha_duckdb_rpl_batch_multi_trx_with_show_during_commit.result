SET GLOBAL debug="+d,debug_sync_when_duckdb_commit";
START REPLICA;
SET debug_sync="now WAIT_FOR commit_signal";
SHOW VARIABLES LIKE '%thread_pool%';
SHOW REPLICA STATUS;
SET GLOBAL debug="-d,debug_sync_when_duckdb_commit";
SET debug_sync="now SIGNAL resume_signal";
